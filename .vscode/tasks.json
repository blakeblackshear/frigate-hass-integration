{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Restart Home Assistant",
      "type": "shell",
      "command": "docker compose restart hass",
      "problemMatcher": [],
      "isBackground": false,
      "presentation": {
        "reveal": "always",
        "close": true
      }
    },
    {
      "label": "Reconfigure Home Assistant",
      "type": "shell",
      "command": "docker compose up --detach --force-recreate hass",
      "problemMatcher": [],
      "isBackground": false,
      "presentation": {
        "reveal": "always",
        "close": true
      }
    },
    {
      "label": "Home Assistant",
      "type": "shell",
      "command": ".devcontainer/follow_ha.sh",
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^this line shall never match$",
          "endsPattern": "Listening for remote debug connection on"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
